---
import Link from '~/components/landing/Link.astro';
import Layout from '~/layouts/PageLayout.astro';
import ContentClass from '~/components/landing/ContentClass.astro';
import NavClass from '~/components/landing/NavClass.astro';

const metadata = {
  title: 'Clase 2 - Módulo 1 - IA Estanzuela',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <section class="grid max-w-[1024px] px-6 sm:px-4 py-4 m-auto grid-cols-1 md:grid-cols-[1fr_3fr] gap-4">
    <NavClass open={0} />

    <section>
      <header>
        <p
          class="text-xl mb-1 text-secondary dark:text-blue-200 font-bold tracking-wide"
        >
          Clase 2
        </p>
        <h1 class="text-2xl md:text-3xl font-bold leading-tighter tracking-tighter font-heading dark:text-gray-200 mb-8">
          Evolución histórica de la inteligencia artificial, identificación de sistemas y agentes inteligentes.
        </h1>
        <div class="flex flex-col md:flex-row gap-2">
          <a
            href="https://prezi.com/view/j8F5P8MCrL54YLwcoBeO/"
            target="_blank"
            class="btn-primary w-full md:w-fit sm:mb-0">Ver presentación (Prezi)</a
          >
          <a
            href="https://drive.google.com/file/d/1eSdsBa4sf13CoXbJLbjVPINC8Ad1jXcY/view?usp=sharing"
            target="_blank"
            class="btn-secondary w-full md:w-fit sm:mb-0">Descargar presentación (PDF)</a
          >
        </div>
      </header>
      <article class="my-8">
        <h3 class="text-xl text-secondary dark:text-blue-200 font-bold tracking-wide uppercase">Enlaces a videos</h3>

        <ContentClass
          title="La Máquina De Turing"
          href="https://www.youtube.com/watch?v=n0m49cemkrM"
        >
          <p slot='description'>Créditos: <Link href="https://www.youtube.com/@mrryanoficial" target="_blank">Mr Ryan (visitar)</Link></p>
          <slot slot='link-name'>Ver video</slot>
        </ContentClass>

        <ContentClass
          title="Pasado, Presente y Futuro de la IA - ¡Del Deep Learning 1.0 a Google Gemini!"
          href="https://www.youtube.com/watch?v=yAF3bopYMGk"
        >
          <p slot='description'>Créditos: <Link href="https://www.youtube.com/@DotCSV" target="_blank">Dot CSV (visitar)</Link></p>
          <slot slot='link-name'>Ver video</slot>
        </ContentClass>
      </article>
    </section>
  </section>
</Layout>
