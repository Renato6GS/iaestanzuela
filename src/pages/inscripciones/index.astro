---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Inscripciones del curso de Inteligencia Artificial en Estanzuela Zacapa`;
---

<Layout metadata={{ title }}>
  <section>
    <div>
      <div class='text-center p-4 flex flex-col items-center justify-center h-dvh'>
        <h2 class="mb-8 font-bold text-5xl text-wrap break-all">
          <span class="text-primary">Inscripciones</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">Elige un plan para inscribirte</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          Cupo limitado de 40 estudiantes.
        </p>
        <div class="mb-8 flex flex-col md:flex-row gap-4">
          <a rel="noopener noreferrer" href="https://docs.google.com/forms/d/e/1FAIpQLSfa31THrIoEzrVoCFtKEdSqSnYWDQYJ2pOwXltpqWY5Khs44w/viewform?usp=pp_url&entry.740225610=Opci%C3%B3n+1" class="btn">Plan Sábados de 9:00 A.M. a 11:00 A.M.</a>
        </div>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn">Regresar a la página principal</a>
      </div>
    </div>
  </section>
</Layout>
