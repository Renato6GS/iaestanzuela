---
import { Icon } from 'astro-icon/components';

interface Props {
  href: string;
  title: string;
}

const { href, title } = Astro.props;
---

<div class='flex flex-col gap-3 my-8'>
  <h4 class="text-2xl md:text-3xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200">{title}</h4>
  <p class='text-muted leading-7'>
    <slot name='description' />
  </p>

  <a
    class="btn-secondary w-full sm:mb-0 md:w-fit"
    href={href}
    target="_blank"><slot name='link-name'>Ver herramienta</slot> <Icon name="tabler:share-3" class="w-6 h-6 ml-2 rtl:mr-0 rtl:ml-2" /></a
  >
</div>