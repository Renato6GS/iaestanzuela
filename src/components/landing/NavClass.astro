---
interface Props {
  open?: number;
}

const { open } = Astro.props;

const modules = [
  {
    module: 1,
    classes: [
      {
        title: 'Clase 1',
        href: "/modulo-1/clase-1"
      },
      {
        title: 'Clase 2',
        href: "/modulo-1/clase-2"
      },
      {
        title: 'Clase 3',
        href: "/modulo-1/clase-3"
      },
      {
        title: 'Clase 4',
        href: "/modulo-1/clase-4"
      },
      {
        title: 'Clase 5',
        href: "/modulo-1/clase-5"
      },
      {
        title: 'Clase 6 - 7',
        href: "/modulo-1/clase-6-7"
      },
    ]
  }
];
---

<aside class="bg-slate-50 dark:bg-slate-600 rounded-xl overflow-hidden h-fit">
  {modules.map((module, index) => (
    <details class="w-full" open={index === open}>
      <summary class="bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 px-2 py-4 cursor-pointer">MÃ³dulo {module.module}</summary>
      <ul class="flex flex-col">
        {module.classes.map((cls) => (
          <li>
            <a class="hover:text-blue-600 dark:hover:text-blue-400 hover:bg-slate-200 dark:hover:bg-slate-500 block pl-8 py-4 w-full h-full" href={cls.href} title={`Ir a la ${cls.title}`}>
              {cls.title}
            </a>
          </li>
        ))}
      </ul>
    </details>
  ))}
</aside>
